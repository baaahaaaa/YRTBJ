{% extends 'base2.html.twig' %}

{% block title %}Liste des Utilisateurs - SkyLearn Admin{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Liste des Utilisateurs</h3>
        </div>

        <!-- üîé Formulaire de recherche -->
        <form method="POST" action="{{ path('app_user_index') }}" class="mb-4">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Rechercher par nom, pr√©nom ou email..." value="{{ searchTerm }}">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </div>
            </div>
        </form>

        <!-- üìã Liste des utilisateurs -->
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Utilisateurs</h4>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Pr√©nom</th>
                                    <th>Nom</th>
                                    <th>Email</th>
                                    <th>Date d'entr√©e</th>
                                    <th>R√¥le</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.FirstName }}</td>
                                        <td>{{ user.LastName }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.EntryDate ? user.EntryDate|date('Y-m-d') : '' }}</td>
                                        <td>{{ user.roles|join(', ') }}</td>
                                        <td>
                                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-success btn-sm">
                                                 <i class="mdi mdi-eye"></i>
                                            </a>

                                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">
                                                <i class="mdi mdi-pencil"></i>
                                            </a>
                                            <form action="{{ path('app_user_delete', {'id': user.id}) }}" method="post" style="display: inline-block;" onsubmit="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="mdi mdi-delete"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center">Aucun utilisateur trouv√©.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                       <a href="{{ path('user_stats') }}" class="btn btn-primary">Voir les statistiques</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
