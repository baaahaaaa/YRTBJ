{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    
    <style>
        /* Arrière-plan en dégradé */
        body {
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Conteneur qui occupe toute la hauteur, pour centrer la carte */
        .profile-wrapper {
            min-height: 100vh;        /* Occupe 100% de la hauteur de la fenêtre */
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;           /* Un peu de marge intérieure */
        }

        /* Carte de profil plus étroite et plus haute */
        .profile-card {
            max-width: 450px;        /* Largeur max réduite */
            width: 100%;             /* S'adapte à l'espace jusqu'à 450px */
            min-height: 80vh;        /* Hauteur minimale pour un aspect “grand” */
            border: none;
            border-radius: 1rem;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            display: flex;
            flex-direction: column;  /* Permet d'occuper la hauteur disponible */
        }

        /* En-tête verte */
        .card-header {
            background-color: #4CAF50; /* Vert principal */
            color: #fff;
            padding: 1.5rem;
            flex: 0 0 auto;           /* La hauteur de l’en-tête est fixe */
        }
        .card-header h2 {
            margin: 0;
            font-size: 1.75rem;
        }

        /* Corps de la carte */
        .card-body {
            background-color: #fff;
            color: #333;
            padding: 2rem;
            flex: 1 0 auto;           /* Le corps prend l'espace restant en hauteur */
        }

        /* Style du tableau */
        .table thead th {
            background-color: #4CAF50;
            color: #fff;
        }
        .table-bordered th,
        .table-bordered td {
            border: 1px solid #ccc;
            vertical-align: middle;
        }

        /* Boutons d'action */
        .btn-edit {
            background-color: #007bff;
            color: #fff;
            margin-right: 1rem;
        }
        .btn-edit:hover {
            background-color: #0069d9;
            color: #fff;
        }

        .btn-logout {
            background-color: #dc3545;
            color: #fff;
        }
        .btn-logout:hover {
            background-color: #c82333;
            color: #fff;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid profile-wrapper">
    <div class="card profile-card">
        <!-- En-tête -->
        <div class="card-header">
            <h2 class="m-0">Mon Profil</h2>
        </div>

        <!-- Corps de la carte -->
        <div class="card-body">
            <!-- Tableau avec deux colonnes : label et valeur -->
            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <tbody>
                        <tr>
                            <th scope="row" style="width: 40%; background-color: #4CAF50; color: #fff;">FirstName</th>
                            <td>{{ app.user.FirstName }}</td>
                        </tr>
                        <tr>
                            <th scope="row" style="background-color: #4CAF50; color: #fff;">LastName</th>
                            <td>{{ app.user.LastName }}</td>
                        </tr>
                        <tr>
                            <th scope="row" style="background-color: #4CAF50; color: #fff;">Email</th>
                            <td>{{ app.user.email }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Boutons d’action -->
            <div class="d-flex justify-content-center mt-4">
                <a href="{{ path('app_profile_edit') }}" class="btn btn-edit">
                    Modifier mon profil
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
