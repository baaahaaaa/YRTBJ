{% extends 'base.html.twig' %}

{% block title %}Internship index{% endblock %}

{% block body %}
    <h1>Internship index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>CompanyName</th>
                <th>Location</th>
                <th>Duration</th>
                <th>Requirements</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for internship in internships %}
            <tr>
                <td>{{ internship.id }}</td>
                <td>{{ internship.Title }}</td>
                <td>{{ internship.Description }}</td>
                <td>{{ internship.CompanyName }}</td>
                <td>{{ internship.Location }}</td>
                <td>{{ internship.Duration }}</td>
                <td>{{ internship.Requirements }}</td>
                <td>{{ internship.Email }}</td>
                <td>
                    <a href="{{ path('app_internship_show', {'id': internship.id}) }}">show</a>
                    <a href="{{ path('app_internship_edit', {'id': internship.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_internship_new') }}">Create new</a>
{% endblock %}
