{% extends 'base2.html.twig' %}

{% block title %}Add Internship - SkyLearn Admin{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Internship Offer</h3>
        </div>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-body">
                        {# Affichage des erreurs globales #}
                        {% if errors is defined %}
                            <div class="alert alert-danger">
                                <ul>
                                    {% for error in errors %}
                                        <li>{{ error }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="form-group">
                            <label for="company_name">Company Name</label>
                            {{ form_widget(form.CompanyName, { 'attr': { 'class': 'form-control' } }) }}
                            {{ form_errors(form.CompanyName, {'attr': {'class': 'invalid-feedback'}}) }}

                        </div>
                        <div class="form-group">
                            <label for="title">Internship Title</label>
                            {{ form_widget(form.Title, { 'attr': { 'class': 'form-control' } }) }}
                            {{ form_errors(form.Title, {'attr': {'class': 'invalid-feedback'}}) }}

                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            {{ form_widget(form.Description, { 'attr': { 'class': 'form-control', 'rows': 4 } }) }}
                            {{ form_errors(form.Description, {'attr': {'class': 'invalid-feedback'}}) }}

                        </div>
                        <div class="form-group">
                            <label for="duration">Duration</label>
                            {{ form_widget(form.Duration, { 'attr': { 'class': 'form-control' } }) }}
                            {{ form_errors(form.Duration, {'attr': {'class': 'invalid-feedback'}}) }}

                        </div>
                        <div class="form-group">
                            <label for="location">Location</label>
                            {{ form_widget(form.Location, { 'attr': { 'class': 'form-control' } }) }}
                            {{ form_errors(form.Location, {'attr': {'class': 'invalid-feedback'}}) }}

                        </div>
                        <div class="form-group">
                            <label for="requirements">Requirements</label>
                            {{ form_widget(form.Requirements, { 'attr': { 'class': 'form-control', 'rows': 4 } }) }}
                            {{ form_errors(form.Requirements, {'attr': {'class': 'invalid-feedback'}}) }}

                        </div>
                        <div class="form-group">
                            <label for="email">Contact Email</label>
                            {{ form_widget(form.Email, { 'attr': { 'class': 'form-control' } }) }}
                            {{ form_errors(form.Email, {'attr': {'class': 'invalid-feedback'}}) }}

                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a href="{{ path('app_internship_index') }}" class="btn btn-light">Cancel</a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
