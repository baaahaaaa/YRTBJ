{% extends 'base.html.twig' %}

{% block title %}Candidat{% endblock %}

{% block body %}
    <h1>Candidat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ candidat.id }}</td>
            </tr>
            <tr>
                <th>Date_candidature</th>
                <td>{{ candidat.DateCandidature ? candidat.DateCandidature|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ candidat.Email }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ candidat.PhoneNumber }}</td>
            </tr>
            <tr>
                <th>FullName</th>
                <td>{{ candidat.FullName }}</td>
            </tr>
            <tr>
                <th>Result</th>
                <td>{{ candidat.Result ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_candidat_index') }}">back to list</a>

    <a href="{{ path('app_candidat_edit', {'id': candidat.id}) }}">edit</a>

    {{ include('candidat/_delete_form.html.twig') }}
{% endblock %}
