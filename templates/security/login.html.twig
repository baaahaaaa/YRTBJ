
{% block css %}
<style>
body {
    background: #f8f9fa;
    font-family: 'Poppins', sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}

.custom-login-container {
    background: white;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    padding: 40px;
    text-align: center;
    width: 400px;
}

.custom-h1 {
    color: #28a745;
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 10px;
}

.custom-p {
    font-size: 14px;
    color: #333;
    margin-bottom: 20px;
}

.custom-form-group {
    margin-bottom: 15px;
    text-align: left;
}

.custom-form-group label {
    font-weight: bold;
    color: #333;
    font-size: 14px;
    display: block;
    margin-bottom: 5px;
}

.custom-form-group input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 14px;
}

.custom-form-group input:focus {
    border-color: #28a745;
    outline: none;
}

.custom-login-button {
    width: 100%;
    padding: 10px;
    background: #28a745;
    border: none;
    color: white;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
    font-weight: 600;
    margin-top: 10px;
}

.custom-login-button:hover {
    background: #218838;
}

.custom-register-link, .custom-forgot-password {
    display: block;
    color: #6c757d;
    text-decoration: none;
    font-size: 14px;
    margin-top: 10px;
}

.custom-register-link:hover, .custom-forgot-password:hover {
    text-decoration: underline;
    color: #0056b3;
}

/* ðŸ”¹ Style du QR Code */
.qr-code-container {
    margin-top: 20px;
    text-align: center;
}

.qr-code-container h4 {
    font-size: 16px;
    color: #333;
    margin-bottom: 10px;
}

.qr-code-container img {
    width: 200px;
    height: 200px;
    border: 1px solid #ddd;
    border-radius: 10px;
    display: block;
    margin: 0 auto;
}
</style>
{% endblock %}

{% block body %}
<div class="custom-login-container">
    <h1 class="custom-h1">Connexion</h1>
    
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="POST">
        <div class="custom-form-group">
            <label for="username">Email</label>
            <input type="text" name="email" value="{{ last_username }}" required autofocus>
        </div>

        <div class="custom-form-group">
            <label for="password">Mot de passe</label>
            <input type="password" name="password" required>
        </div>
        
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="custom-login-button">Se connecter</button>
        <a href="{{ path('app_forgot_password_request') }}" class="custom-forgot-password">Mot de passe oubliÃ© ?</a>
    </form>


</div>
{% endblock %}
