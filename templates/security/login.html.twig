

{% block css %}
<style>
body {
    background: #f8f9fa;
    font-family: 'Poppins', sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}

.login-container {
    background: white;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    padding: 40px;
    text-align: center;
    width: 400px;
}

h1 {
    color: #28a745;
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 10px;
}

p {
    font-size: 14px;
    color: #333;
    margin-bottom: 20px;
}

.form-group {
    margin-bottom: 15px;
    text-align: left;
}

.form-group label {
    font-weight: bold;
    color: #333;
    font-size: 14px;
    display: block;
    margin-bottom: 5px;
}

.form-group input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 14px;
}

.form-group input:focus {
    border-color: #28a745;
    outline: none;
}

button.login-button {
    width: 100%;
    padding: 10px;
    background: #28a745;
    border: none;
    color: white;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
    font-weight: 600;
    margin-top: 10px;
}

button.login-button:hover {
    background: #218838;
}

.register-link, .forgot-password {
    display: block;
    color: #6c757d;
    text-decoration: none;
    font-size: 14px;
    margin-top: 10px;
}

.register-link:hover, .forgot-password:hover {
    text-decoration: underline;
    color: #0056b3;
}
</style>
{% endblock %}

{% block body %}
<div class="login-container">
    <h1>Connexion</h1>
    {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

    <form action="{{ path('app_login') }}" method="POST">
       
        <div class="form-group">
            <label for="username">Email</label>
               <input type="text" name="email" value="{{ last_username }}" required autofocus>
        </div>

        <div class="form-group">
            <label for="password">Mot de passe</label>
          <input type="password" name="password" required>
          </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="login-button">Se connecter</button>
            <a class="forgot-password">Mot de passe oubli√© ?</a>

    </form>

</div>
{% endblock %}
