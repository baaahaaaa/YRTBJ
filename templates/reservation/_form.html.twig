{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
    <div class="row g-3">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.event) }}
                {{ form_widget(form.event) }}
                {{ form_errors(form.event, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.NbPlaces) }}
                {{ form_widget(form.NbPlaces, {
                    'attr': {
                        'class': 'form-control',
                        'min': 1
                    }
                }) }}
               {{ form_errors(form.NbPlaces, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.Total_price) }}
                {{ form_widget(form.Total_price) }}
                {{ form_errors(form.Total_price, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.PhoneNumber) }}
                {{ form_widget(form.PhoneNumber, {
                    'attr': {
                        'class': 'form-control'
                    }
                }) }}
               {{ form_errors(form.PhoneNumber, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                {{ form_label(form.Name) }}
                {{ form_widget(form.Name, {
                    'attr': {
                        'class': 'form-control'
                    }
                }) }}
               {{ form_errors(form.Name, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>
        </div>

        <div class="col-12">
            <div class="form-group">
                {{ form_label(form.SpecialRequest) }}
                {{ form_widget(form.SpecialRequest, {
                    'attr': {
                        'class': 'form-control',
                        'rows': 3
                    }
                }) }}
        {{ form_errors(form.SpecialRequest, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>
        </div>
    </div>

    <div class="mt-4">
        <button class="btn btn-success">
            <i class="bi bi-check-circle"></i> {{ button_label|default('Save') }}
        </button>
    </div>
{{ form_end(form) }}

<style>
    .form-group label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }
    .form-control {
        padding: 0.75rem 1rem;
        border-radius: 0.375rem;
        border: 1px solid #dee2e6;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
    .form-control:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    .invalid-feedback {
        display: block;
        margin-top: 0.25rem;
    }
    .btn-success {
        padding: 0.75rem 1.5rem;
    }
</style>