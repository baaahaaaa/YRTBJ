<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>{% block title %}SkyLearn{% endblock %}</title>

    <!-- Favicons -->
    <link href="{{ asset('img/SkylearnLogo.png') }}" rel="icon">
    <link href="{{ asset('img/apple-touch-icon.png') }}" rel="apple-touch-icon">
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    {% block css %}
        <link href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('vendor/bootstrap-icons/bootstrap-icons.css') }}" rel="stylesheet">
        <link href="{{ asset('vendor/aos/aos.css') }}" rel="stylesheet">
        <link href="{{ asset('vendor/glightbox/css/glightbox.min.css') }}" rel="stylesheet">
        <link href="{{ asset('vendor/swiper/swiper-bundle.min.css') }}" rel="stylesheet">
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <link href="{{ asset('css/custom.css') }}" rel="stylesheet">
        <link href="{{ asset('css/main.css') }}" rel="stylesheet">
                <link href="{{ asset('css/baha.css') }}" rel="stylesheet">

    {% endblock %}
</head>

<body class="index-page">
    <header id="header" class="header d-flex align-items-center sticky-top">
        {% block header %}
            <div class="container-fluid container-xl position-relative d-flex align-items-center">
                <a href="{{ path('home') }}" class="logo d-flex align-items-center me-auto">
                    <img src="{{ asset('img/skylearnlogo.png') }}" alt="SkyLearn">
                    <h1 class="sitename">SkyLearn</h1>
                </a>
                {% block nav %}
                   <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <!-- Logo + Brand (à gauche) -->
    <a class="navbar-brand d-flex align-items-center" href="{{ path('home') }}">
      <!-- Si vous avez un logo image -->
      <!-- <img src="{{ asset('images/logo.png') }}" alt="SkyLearn Logo" width="40" height="40" class="me-2"> -->
      <span class="fw-bold text-success">SkyLearn</span> <!-- Nom de la marque en vert -->
    </a>

    <!-- Bouton toggler (pour mobiles) -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Contenu de la navbar (centré + à droite) -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <!-- Liens du menu (centrés via mx-auto) -->
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="{{ path('home') }}">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('events') }}">Event</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_internship_show_all') }}">Internships</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_reclamation_index') }}">Contact</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_course_index_front') }}">Courses</a>
        </li>
        <li class="nav-item">
    <a class="nav-link text-danger fw-bold" href="{{ path('dashboard') }}">
        Dashboard
    </a>
</li>

        <!-- Dropdown Inscription -->
        {% if not app.user %}
<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
       data-bs-toggle="dropdown" aria-expanded="false">
        Inscription
    </a>
    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
        <li><a class="dropdown-item" href="{{ path('signup_tutor') }}">Tutor</a></li>
        <li><a class="dropdown-item" href="{{ path('signup_student') }}">Student</a></li>
        <li><a class="dropdown-item" href="{{ path('signup_agent') }}">Agent</a></li>
    </ul>
</li>
{% endif %}
      </ul>

      <!-- Boutons utilisateur (à droite) -->
      <ul class="navbar-nav">
        {% if app.user %}
    <!-- Initiales de l'utilisateur (Prénom et Nom) -->
    <li class="nav-item me-2">
        <a href="{{ path('app_profile') }}" class="btn-custom-green">
            {{ app.user.FirstName|slice(0, 1) }}{{ app.user.LastName|slice(0, 1) }}
        </a>
    </li>
    <!-- Logout -->
    <li class="nav-item">
        <a href="{{ path('app_logout') }}" class="btn-custom-green">
            Logout
        </a>
    </li>
{% else %}
    <!-- Login -->
    <li class="nav-item">
        <a href="{{ path('app_login') }}" class="btn-custom-green">
            Login
        </a>
    </li>
{% endif %}
      </ul>
    </div>
  </div>
</nav>


                {% endblock %}
            </div>
        {% endblock %}
    </header>

    <main class="main">
        {% block body %}{% endblock %}
    </main>

    <footer>
        {% block footer %}
            <div class="container footer-top">
                <div class="row">
                    <div class="col-lg-4 footer-about">
                        <a href="{{ path('home') }}" class="logo d-flex align-items-center">
                        
                            <span class="sitename">SkyLearn</span>
                        </a>
                        <p>Chotrana Ariana Soghra, Ariana</p>
                        <p><strong>Phone:</strong> +216 55256896</p>
                        <p><strong>Email:</strong> info@example.com</p>
                    </div>
                    <div class="col-lg-4 footer-links">
                        <h4>Useful Links</h4>
                        <ul>
                            <li><a href="{{ path('home') }}">Home</a></li>
                            <li><a>About us</a></li>
                            <li><a>Courses</a></li>
                            <li><a>Events</a></li>
                            <li><a>Internship</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-4 footer-newsletter">
                        <h4>Our Newsletter</h4>
                        <p>Subscribe to our newsletter for updates.</p>
                        <form action="#" method="post">
                            <input type="email" name="email" placeholder="Enter your email">
                            <input type="submit" value="Subscribe">
                        </form>
                    </div>
                </div>
            </div>
        {% endblock %}
    </footer>

    {% block js %}
    <!-- Bootstrap Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Your custom JS -->
        <script src="{{ asset('js/main.js') }}"></script>
        <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
        <script src="{{ asset('vendor/php-email-form/validate.js') }}"></script>
        <script src="{{ asset('vendor/aos/aos.js') }}"></script>
        <script src="{{ asset('vendor/glightbox/js/glightbox.min.js') }}"></script>
        <script src="{{ asset('vendor/purecounter/purecounter_vanilla.js') }}"></script>
        <script src="{{ asset('vendor/swiper/swiper-bundle.min.js') }}"></script>
        <script src="{{ asset('js/main.js') }}"></script>
    {% endblock %}
</body>

</html>
