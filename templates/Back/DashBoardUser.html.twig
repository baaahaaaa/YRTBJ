{% extends 'base2.html.twig' %}

{% block title %}Gestion des Utilisateurs - SkyLearn Admin{% endblock %}

{% block nav %}
    <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <div class="text-center sidebar-brand-wrapper d-flex align-items-center">
            <a class="sidebar-brand brand-logo">
                <img src="{{ asset('images2/Sky.png') }}" alt="logo" style="width: 150px; height: auto;" />
            </a>                            
            <a class="sidebar-brand brand-logo-mini pl-4 pt-3">
                <img src="{{ asset('images2/Sky.png') }}" alt="logo" style="width: 50px; height: auto;" />
            </a>
        </div>
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link">
                    <i class="mdi mdi-home menu-icon"></i>
                    <span class="menu-title">Tableau de Bord</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link">
                    <i class="mdi mdi-format-list-bulleted menu-icon"></i>
                    <span class="menu-title">Utilisateurs</span>
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Gestion des Utilisateurs</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Utilisateurs</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Gérer les Utilisateurs</li>
                </ol>
            </nav>
        </div>

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liste des Utilisateurs</h4>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Prénom</th>
                                    <th>Nom</th>
                                    <th>Email</th>
                                    <th>Date d'entrée</th>
                                    <th>Rôle</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                <tr>
                                    <td>{{ user.FirstName }}</td>
                                    <td>{{ user.LastName }}</td>
                                    <td>{{ user.Email }}</td>
                                    <td>{{ user.Entry_Date|date('Y-m-d') }}</td>
                                    <td>{{ user.Role }}</td>
                                    <td>
                                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-success btn-sm"><i class="mdi mdi-eye"></i></a>
                                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm"><i class="mdi mdi-pencil"></i></a>
                                        <a href="{{ path('app_user_delete', {'id': user.id}) }}" class="btn btn-danger btn-sm"><i class="mdi mdi-delete"></i></a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <a href="{{ path('app-user-new') }}" class="btn btn-primary">Ajouter un utilisateur</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
