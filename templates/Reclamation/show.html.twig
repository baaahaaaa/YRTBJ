{% extends 'base.html.twig' %}

{% block title %}Réclamation{% endblock %}

{% block body %}
    <h1>Détails de la Réclamation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ reclamation.subject }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ reclamation.userName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reclamation.description }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ reclamation.createdat ? reclamation.createdat|date('Y-m-d') : '-' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ reclamation.statut }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reclamation.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('reclamation/_delete_form.html.twig') }}
{% endblock %}