{% extends 'base.html.twig' %}

{% block title %}Complaint{% endblock %}

{% block body %}
    <h1>Complaint</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ complaint.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ complaint.Subject }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ complaint.Name }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ complaint.Message }}</td>
            </tr>
            <tr>
                <th>Date_soumission</th>
                <td>{{ complaint.DateSoumission ? complaint.DateSoumission|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ complaint.Status }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ complaint.Email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_complaint_index') }}">back to list</a>

    <a href="{{ path('app_complaint_edit', {'id': complaint.id}) }}">edit</a>

    {{ include('complaint/_delete_form.html.twig') }}
{% endblock %}
