{% extends 'base2.html.twig' %}

{% block title %}Events List{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-primary">Events Management</h1>
            <a href="{{ path('app_event_new') }}" class="btn btn-primary" novalidate>
                <i class="bi bi-plus-circle"></i> Create New Event
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Type</th>
                                <th>Location</th>
                                <th>Date</th>
                                <th>Price</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for event in events %}
                            <tr>
                                <td>{{ event.Title }}</td>
                                <td>{{ event.Description|slice(0, 50) ~ '...' }}</td>
                                <td><span class="badge bg-info">{{ event.Type }}</span></td>
                                <td><i class="bi bi-geo-alt"></i> {{ event.Location }}</td>
                                <td><i class="bi bi-calendar"></i> {{ event.DateEvent ? event.DateEvent|date('Y-m-d') : '' }}</td>
                                <td><span class="badge bg-success">{{ event.Price }} DT</span></td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-info btn-sm" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <i class="bi bi-calendar-x fs-1 d-block mb-2 text-muted"></i>
                                    No events found
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}