{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ course.Title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.Description }}</td>
            </tr>
            <tr>
                <th>Domain</th>
                <td>{{ course.Domain }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ course.Type }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ course.Price }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ course.CreationDate ? course.CreationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_course_index') }}">back to list</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">edit</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
